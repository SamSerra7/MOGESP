@model MOGESP.Entities.Dominio.Funcionario
@{
	ViewData["Title"] = "Funcionario y Participacion en Puestos";
	var funcionario = (MOGESP.Entities.Dominio.Funcionario)ViewData["funcionario"];
	var concursos = (IEnumerable<MOGESP.Entities.Dominio.Concurso>)ViewData["concursos"];
}


<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css"
	  integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

<!--Encabezado-->
<div>
	<center>
		<h2>Funcionario y Participacion en Puestos</h2>
	</center>
	<div class="col-md-12 col-xs-12 col-sm-12 col-lg-12">
		<hr />
	</div>
	<br />
</div>



<div class="row">
	<h4>Datos Personales</h4>
	<div class="row">
		<div class="col-md-2 col-md-offset-1">
			<label>N&uacute;mero de C&eacute;dula</label>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<p>@funcionario.Cedula</p>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<label>Nombre</label>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<p>@funcionario.Nombre @funcionario.SegundoApellido @funcionario.PrimerApellido</p>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<label>Direcci&oacute;n</label>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<p>@funcionario.Direccion</p>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<label>Sexo</label>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<p>@funcionario.Sexo</p>
		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-md-2 col-md-offset-1">
			<label>Telefonos</label>
		</div>
		<div class="col-md-2 col-md-offset-1">
			@if (funcionario.Telefonos != null)
			{
				@foreach (var telefono in funcionario.Telefonos)
				{
					<p>@telefono</p>
				}
			}
		</div>
		<div class="col-md-2 col-md-offset-1">
			<label>Correos</label>
		</div>
		<div class="col-md-2 col-md-offset-1">
			@if (funcionario.Correos != null)
			{
				@foreach (var correo in funcionario.Correos)
				{
					<p>@correo</p>
				}
			}
		</div>
	</div>
</div>


<div class="row">
	<h4>Participacion de Concursos</h4>
	<!--Tabla Paricipacion en concursos-->
	<div class="table-responsive col-md-4 col-md-offset-4" style="text-align: center; overflow-y: auto;">
		<table id="tablaDatosPersonales" class="table table-responsive">
			<thead style="align-content: center;">
				<tr>
					<th class="centrarTitulos ">Concurso</th>
					<th class="centrarTitulos ">Puesto</th>
					<th class="centrarTitulos ">Fecha</th>
				</tr>
			</thead>
			@foreach (var concurso in concursos)
			{
				<tr>
					<td> @concurso.NombreConcurso</td>
					<td> @concurso.Puesto.Nombre</td>
					<td>
						@concurso.FechaConcurso
					</td>
				</tr>
			}

		</table>
	</div>

</div>

