@using System.Data
@model DataSet

@{
    ViewData["Title"] = "HojaCitas";
}

<center><h2>Hoja de Citas</h2></center>
<hr />

<div align="center">
    Esconder:   <a class="toggle-vis" data-column="0">C&eacute;dula</a> -
    <a class="toggle-vis" data-column="1">Nombre</a> -
    <a class="toggle-vis" data-column="2">Psicologo(a)</a> -
    <a class="toggle-vis" data-column="3">Fecha Cita</a> -
    <a class="toggle-vis" data-column="4">Encargado</a> -
    <a class="toggle-vis" data-column="5">Asistencia</a> -
    <a class="toggle-vis" data-column="6">N&uacute;m convocatoria</a> -
    <a class="toggle-vis" data-column="7">N&uacute;m flujo</a> 
    <br />
    <a class="toggle-vis" data-column="8">Fecha Ingreso</a> -
    <a class="toggle-vis" data-column="9">Condici&oacute;n</a> -
    <a class="toggle-vis" data-column="10">Estado Correo</a> -
    <a class="toggle-vis" data-column="11">Fecha Est Correo</a> -
    <a class="toggle-vis" data-column="12">D&iacute;as Justif</a> 
</div>

<table id="citas" class="display table table-responsive">
    <thead>
        <tr>
            <th>C&eacute;dula Primer Ingreso</th>
            <th>Nombre Primer Ingreso</th>
            <th>Psicologo(a)</th>
            <th>Fecha Cita</th>
            <th>Encargado Admin</th>
            <th>Asistencia</th>
            <th>N&uacute;mero convocatoria</th>
            <th>N&uacute;mero flujo</th>
            <th>Fecha Ingreso</th>
            <th>Condici&oacute;n</th>
            <th>Estado Correo</th>
            <th>Fecha Estado Correo</th>
            <th>M&aacute;x d&iacute;as justificaci&oacute;n</th>

        </tr>
    </thead>
    @foreach (DataRow row in Model.Tables[0].Rows)
        {
            <tr>
                <td>@row["TC_NumeroCedula"]</td>
                <td>@row["TC_Nombre"] @row["TC_PrimerApellido"] @row["TC_SegundoApellido"]</td>
                <td>@row["TC_NombrePsicologo"]</td>
                <td>@row["TF_FechaCita"]</td>
                <td>@row["TC_EncargadoAdminNombre"]</td>
                <td>@row["Asistencia"]</td>
                <td>@row["TC_NumeroConvocatoria"]</td>
                <td>@row["TN_NumeroFlujo"]</td>
                <td>@row["TF_FechaIngreso"]</td>
                <td>@row["Condicion"]</td>
                <td>@row["EstadoCorreo"]</td>
                <td>@row["TF_FecEstCorreo"]</td>
                <td>@row["TN_MaxDiasJustificacion"]</td>
            </tr>
        }

</table>


<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css"/>


@section Scripts{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/jquery.dataTables.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.0/js/buttons.html5.min.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#citas').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'excelHtml5',
                    'pdfHtml5'
                ],
                info: false
            } );
        



            $('a').on( 'click', function (e) {
                e.preventDefault();
 
                // Get the column API object
                var column = table.column( $(this).attr('data-column') );
 
                // Toggle the visibility
                column.visible( ! column.visible() );
            });

        });
    </script>
}

