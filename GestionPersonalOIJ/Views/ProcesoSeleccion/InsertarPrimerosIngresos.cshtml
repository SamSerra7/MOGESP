@model MOGESP.Entities.Dominio.PrimerIngreso


@{
    ViewData["Title"] = "InsertarPrimerosIngresos";


    var primerosIngresos = (List<MOGESP.Entities.Dominio.PrimerIngreso>)ViewData["primerosIngresos"];

    int cantCorreos = 1;
    int cantTels = 1;


}

<h2>Insertar Primeros Ingresos</h2>
<hr />


@using (Html.BeginForm("AgregarPrimerIngreso", "ProcesoSeleccion", FormMethod.Post))
{

    <center>
        @Html.LabelFor(m => m.NumeroFlujo)
        @Html.TextBoxFor(m => m.NumeroFlujo)
    </center>

    <center>
        @Html.LabelFor(m => m.NumeroConvocatoria)
        @Html.TextBoxFor(m => m.NumeroConvocatoria)
    </center>

    <br />

    @Html.LabelFor(m => m.Cedula)
    @Html.TextBoxFor(m => m.Cedula)

    <br />

    @Html.LabelFor(m => m.Nombre)
    @Html.TextBoxFor(m => m.Nombre)

    <br />

    @Html.LabelFor(m => m.PrimerApellido)
    @Html.TextBoxFor(m => m.PrimerApellido)

    <br />

    @Html.LabelFor(m => m.SegundoApellido)
    @Html.TextBoxFor(m => m.SegundoApellido)

    <br />

    @Html.LabelFor(m => m.Sexo)
    @Html.DropDownListFor(m => m.Sexo, new List<SelectListItem>
                   { new SelectListItem{Text="M", Value="M"},
                     new SelectListItem{Text="F", Value="F"} }, "Seleccione su sexo")

    <br />

    @Html.LabelFor(m => m.Direccion)
    @Html.TextAreaFor(m => m.Direccion)

    <br />

    @Html.LabelFor(m => m.Correos)
    @for (int i = 0; i < cantCorreos; i++)
    {
        @Html.TextAreaFor(m => m.Correos)
        <br />
    }

    @Html.LabelFor(m => m.Telefonos)
    @for (int j = 0; j < cantTels; j++)
    {
        @Html.TextAreaFor(m => m.Telefonos)
        <br />
    }

    <button type="submit" id="btnAgregar" class="btn-primary">
        Agregar
    </button>

}


