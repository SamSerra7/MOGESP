@model MOGESP.Entities.Dominio.PrimerIngreso


@{
    ViewData["Title"] = "InsertarPrimerosIngresos";


    var primerosIngresos = (List<MOGESP.Entities.Dominio.PrimerIngreso>)ViewData["primerosIngresos"];

    int cantCorreos = 1;
    int cantTels = 1;


}

<h2>Insertar Primeros Ingresos</h2>
<hr />


@using (Html.BeginForm("AgregarPrimerIngreso", "ProcesoSeleccion", FormMethod.Post))
{

    <center>
        @Html.LabelFor(m => m.NumeroFlujo)
        @Html.TextBoxFor(m => m.NumeroFlujo,null , new { id = "numeroflujo" })
    </center>

    <center>
        @Html.LabelFor(m => m.NumeroConvocatoria)
        @Html.TextBoxFor(m => m.NumeroConvocatoria ,null , new { id = "numeroconvocatoria" } )
    </center>

    <br />

    @Html.LabelFor(m => m.Cedula)
    @Html.TextBoxFor(m => m.Cedula)

    <br />

    @Html.LabelFor(m => m.Nombre)
    @Html.TextBoxFor(m => m.Nombre)

    <br />

    @Html.LabelFor(m => m.PrimerApellido)
    @Html.TextBoxFor(m => m.PrimerApellido)

    <br />

    @Html.LabelFor(m => m.SegundoApellido)
    @Html.TextBoxFor(m => m.SegundoApellido)

    <br />

    @Html.LabelFor(m => m.Sexo)
    @Html.DropDownListFor(m => m.Sexo, new List<SelectListItem>
                   { new SelectListItem{Text="M", Value="M"},
                     new SelectListItem{Text="F", Value="F"} }, "Seleccione su sexo")

    <br />

    @Html.LabelFor(m => m.Direccion)
    @Html.TextAreaFor(m => m.Direccion)

    <br />

    @Html.LabelFor(m => m.Correos)
    @for (int i = 0; i < cantCorreos; i++)
    {
        @Html.TextAreaFor(m => m.Correos)
        <br />
    }

    @Html.LabelFor(m => m.Telefonos)
    @for (int j = 0; j < cantTels; j++)
    {
        @Html.TextAreaFor(m => m.Telefonos)
        <br />
    }

    <button type="submit" id="btnAgregar" class="btn-primary">
        Agregar
    </button>

}


<hr />

<div class="table-responsive">
    <table id="tablaId" class="table table-hover">
        <tr>
            <th>C&eacute;dula</th>
            <th>Nombre</th>
            <th>Primer Apellido</th>
            <th>Segundo Apellido</th>
            <th>Sexo</th>
            <th>Direccí&oacute;n</th>
            <th>Correos</th>
            <th>Tel&eacute;fonos</th>
            <th>Eliminar</th>
        </tr>

        @if (primerosIngresos != null)
        {
            @foreach (var primerIngreso in primerosIngresos)
            {
                <tr class="success">
                    <td> @primerIngreso.Cedula</td>
                    <td> @primerIngreso.Nombre</td>
                    <td> @primerIngreso.PrimerApellido</td>
                    <td> @primerIngreso.SegundoApellido</td>
                    <td> @primerIngreso.Sexo</td>
                    <td> @primerIngreso.Direccion</td>

                    <td>
                        @foreach (var correo in primerIngreso.Correos)
                        {
                            <p>@correo</p>
                        }
                    </td>

                    <td>
                        @foreach (var telefono in primerIngreso.Telefonos)
                        {
                            <p>@telefono</p>
                        }
                    </td>


                    <td align="center">

                        <a href="@Url.Action("EliminarPrimerIngreso", new { cedula = primerIngreso.Cedula})">
                            <span class="glyphicon glyphicon-trash" style="color: red;align-self:center;" />
                        </a>

                    </td>
                </tr>
            }
        }

    </table>

    @using (Html.BeginForm("InsertarTodosPrimerosIngresos", "ProcesoSeleccion", FormMethod.Post))
    {
        <button type="submit" id="btnInsertarTodos" class="btn-primary" onclick="return confirm("¿Desea insertar todos los registros?")">
            Insertar Todos
        </button>
    }

</div>

<br />