<hr />

<div class="table-responsive">
    <table id="tablaId" class="table table-hover">
        <tr>
            <th>C&eacute;dula</th>
            <th>Nombre</th>
            <th>Primer Apellido</th>
            <th>Segundo Apellido</th>
            <th>Sexo</th>
            <th>Direccí&oacute; n</th>
            <th>Correos</th>
            <th>Tel&eacute;fonos</th>
            <th>Eliminar</th>
        </tr>

        @if (primerosIngresos != null)
        {
            @foreach (var primerIngreso in primerosIngresos)
            {
                <tr class="success">
                    <td> @primerIngreso.Cedula</td>
                    <td> @primerIngreso.Nombre</td>
                    <td> @primerIngreso.PrimerApellido</td>
                    <td> @primerIngreso.SegundoApellido</td>
                    <td> @primerIngreso.Sexo</td>
                    <td> @primerIngreso.Direccion</td>

                    <td>
                        @foreach (var correo in primerIngreso.Correos)
                        {
                            <p>@correo</p>
                        }
                    </td>

                    <td>
                        @foreach (var telefono in primerIngreso.Telefonos)
                        {
                            <p>@telefono</p>
                        }
                    </td>


                    <td align="center">

                        <button id="btnEliminar" type="button" class="btn-link">
                            <a href="~/ProcesoSeleccion/Eliminar/">
                                <span class="glyphicon glyphicon-trash" style="color: red;align-self:center;"></span>
                            </a>
                        </button>

                    </td>
                </tr>
            }
        }




    </table>

</div>


