<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--Coloca el titulo de cada pagina-->
    <title>@ViewData["Title"] - MOGESP-OIJ</title>

    <!--Coloca la imagen a la pestaña del navegador-->
    <link href="https://sitiooij.poder-judicial.go.cr/images/placa-lg.png" rel="shortcut icon" type="image/x-icon" />

	<environment include="Development">
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
		<link rel="stylesheet" href="~/css/site.css" />
		<link rel="stylesheet" href="~/css/Estilos_MOGEST.css" />
	</environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>

<body>

	<!--Encabezado de imagenes-->
	<div class="div_Encabezado">
		<div class="container-fluid">
			<div class="col-xs-12">
				<!-- Images - logos arriba del navbar -->
				<div class="navbar-header">
					<a class="left" href="#">
						<img class="logoOIJ" src="https://sitiooij.poder-judicial.go.cr/images/placa-lg.png" title="Organismo de Investigación Judicial" />
					</a>
				</div>

				<div class="navbar-header navbar-right">
					<a href="#">
						<img class="logoPoderJudicial" src="https://www.poder-judicial.go.cr/servicios/img/portfolio/logopj.png" title="Poder Judicial" />
					</a>
					<!-- /.navbar-collapse -->
				</div>
			</div>
		</div>
	</div>

	<!--Inicio de Menú Bar-->
	<nav class="navbar navbar-inverse ">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<!--Logo de incio-->
				<a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
					<span class="glyphicon glyphicon-home" aria-hidden="true" title="Inicio"></span>
				</a>
			</div>

			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">

					<!--Inicio de dropdown Procesos de seleccion-->
					<li class="nav-item dropdown" id="dropdownSeleccion">
						<a class="dropdown-toggle" id="navbarDropdownSeleccion" data-toggle="dropdown">
							Proceso de Selecci&oacute;n <span class="caret"></span>
						</a>

						<!-- Coloca debajo del menu Proceso Seleccion-->
						<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
							<li><a class="dropdown-item" asp-controller="ProcesoSeleccion" asp-action="PrimerosIngresos">Primer ingreso</a></li>
							<li><a class="dropdown-item" href="2">Ascensos</a></li>
						</ul>
					</li>

					<!--Inicio de dropdown Analisis y control de plazas-->
					<li class="nav-item dropdown" id="dropdownAnalisis">
						<a class="dropdown-toggle" id="navbarDropdownAnalisis" data-toggle="dropdown">
							An&aacute;lisis y Control de Plazas <span class="caret"></span>
						</a>

						<!-- Coloca debajo del menu Analisis y control de plazas-->
						<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
							<li><a class="dropdown-item" href="1">Relaci&oacute;n de puestos</a></li>
							<li><a class="dropdown-item" href="2">Traslados</a></li>
							<li><a class="dropdown-item" href="3">Plazas vacantes</a></li>
						</ul>
					</li>

					<!--Inicio de dropdown Gestion del Personal-->
					<li class="nav-item dropdown" id="dropdownGestion">
						<a class="dropdown-toggle" id="navbarDropdownGestion" data-toggle="dropdown">
							Gesti&oacute;n del personal <span class="caret"></span>
						</a>

						<!-- Coloca debajo del menu Gestion del Personal-->
						<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
							<li><a class="dropdown-item" href="1">Bolsas de trabajo</a></li>
							<li><a class="dropdown-item" href="2">Control de carnet</a></li>
							<li><a class="dropdown-item" href="3">N&oacute;minas</a></li>
						</ul>
					</li>

					<!--Inicio de dropdown Control de Flujos-->
					<li class="nav-item dropdown" id="dropdownControlFlujo">
						<a class="dropdown-toggle" id="navbarDropdownControlFlujo" data-toggle="dropdown">
							Control de Flujos <span class="caret"></span>
						</a>

						<!-- Coloca debajo del menu Control de Flujo-->
						<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
							<li><a class="dropdown-item" href="1">Base de elegibles</a></li>
							<li><a class="dropdown-item" href="2">Flujos de selecci&oacute;n</a></li>
							<li><a class="dropdown-item" href="3">Registros judiciales</a></li>
						</ul>
					</li>

				</ul>
				<partial name="_LoginPartial" />
			</div>
		</div>
	</nav>

	<partial name="_CookieConsentPartial" />

	<div class="col-md-12 col-xs-12 col-sm-12 col-lg-12">
		<hr />
	</div>

	<div class="container body-content">
		@RenderBody()
		<hr />

	</div>

	<footer>
		<center><p style="color:white;">&copy; 2019 - Módulo de Gestion de Personal</p></center>
	</footer>

	<environment include="Development">
		<script src="~/lib/jquery/dist/jquery.js"></script>
		<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
		<script src="~/js/site.js" asp-append-version="true"></script>
	</environment>
	<environment exclude="Development">
		<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
				asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
				asp-fallback-test="window.jQuery"
				crossorigin="anonymous"
				integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
		</script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"
				asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
				asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
				crossorigin="anonymous"
				integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd">
		</script>
		<script src="~/js/site.min.js" asp-append-version="true"></script>
	</environment>

	@RenderSection("Scripts", required: false)



	<script>

		$('#dropdownSeleccion').hover(function () {
			$('#navbarDropdownSeleccion').trigger('click')
		})
		$('#dropdownAnalisis').hover(function () {
			$('#navbarDropdownAnalisis').trigger('click')
		})
		$('#dropdownGestion').hover(function () {
			$('#navbarDropdownGestion').trigger('click')
		})
		$('#dropdownControlFlujo').hover(function () {
			$('#navbarDropdownControlFlujo').trigger('click')
		})

	</script>

</body>


</html>
